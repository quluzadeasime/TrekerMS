@using TREKER.Business.ViewModels.BlogVMs
@model CreateBlogVM

<div class="wrapper">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <div class="page-title-box">
                    <div class="btn-group m-0 pull-right">
                        <ol class="breadcrumb hide-phone p-0 m-0">
                            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="Dashboard">Urora</a></li>
                            <li class="breadcrumb-item"><a asp-action="Tables" asp-controller="Dashboard">DB Tables</a></li>
                            <li class="breadcrumb-item"><a asp-action="Table" asp-controller="Blog">Blog Table</a></li>
                            <li class="breadcrumb-item active">New Blog</li>
                        </ol>
                    </div>
                    <h4 class="page-title">Our Blogs</h4>
                </div>
            </div>
        </div>
        <div class="row justify-content-center mb-5">
            <div class="col-md-8">
                <div class="card mt-5 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0">Create New Blog</h4>
                    </div>
                    <div class="card-body mx-5 mb-4">
                        <div asp-validation-summary="All" style="color: red; font-size: 16px"></div>
                        <form method="post" enctype="multipart/form-data">
                            <div class="form-group">
                                <label asp-for="Title" class="form-label">Title</label>
                                <input type="text" class="form-control" asp-for="Title" placeholder="Enter Title">
                            </div>
                            <div class="form-group">
                                <label asp-for="ByUsername" class="form-label">By Username</label>
                                <input type="text" class="form-control" asp-for="ByUsername" placeholder="Enter By Username">
                            </div>
                            <div class="form-group">
                                <label asp-for="DestinationId" class="form-label">Destination</label>
                                <select class="form-control" asp-for="DestinationId">
                                    @foreach (var destination in Model.Destinations)
                                    {
                                        <option value="@destination.Id">@destination.Title</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <label asp-for="Description" class="form-label">Description</label>
                                <textarea class="form-control" asp-for="Description" placeholder="Enter Description"></textarea>
                            </div>
                            <div class="form-group">
                                <label asp-for="Images" class="form-label">Images</label>
                                <input class="form-control" asp-for="Images" multiple>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block mt-3">Create</button>
                        </form>
                        <div class="d-grid">
                            <a href="@Url.Action("Table", "Blog")" class="btn btn-success btn-block mt-3" style="background-color: #28a745; color: white;">
                                Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
