            <div class="bg-layer" style="background-image: url('@Url.Content("/assets/images/background/image-12.jpg")'); background-repeat: no-repeat;
  background-attachment: fixed;"></div>
            <div class="auto-container">
                <div class="content-box">
                    <div class="row clearfix">
