@using TREKER.Business.Services.Abstractions
@using TREKER.Core.Entities
@using TREKER.MVC.Areas.Admin.Functions
@model IQueryable<Trekking>
@{
    Layout = null;
}

@inject LayoutService LayoutService

@{
    var settings = await LayoutService.GetSettingsAsync();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Treker - Home</title>
    <!-- Stylesheets -->
    <link href="~/assets/css/bootstrap.css" rel="stylesheet">
    <link href="~/assets/css/style.css" rel="stylesheet">
    <link rel="shortcut icon" href="~/assets/images/favicon.png" type="image/x-icon">
    <link rel="icon" href="~/assets/images/favicon.png" type="image/x-icon">
    <!-- Responsive -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0">
    <link href="~/assets/css/responsive.css" rel="stylesheet">
    <!--[if lt IE 9]><script src="https://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.7.3/html5shiv.js"></script><![endif]-->

</head>

<body>
    <div class="page-wrapper">

        <!-- Preloader -->
        <div class="preloader"></div>

        <div class="search-backdrop"></div>

        <!-- Main Header-->
        <header class="main-header">
            <div class="header-top">
                <div class="auto-container">
                    <div class="inner clearfix">
                        <div class="top-left clearfix">
                            <ul class="info clearfix">
                                <li><i class="icon fa fa-envelope"></i> <a href="mailto:@settings.Email">@settings.Email</a></li>
                                <li><i class="icon fa fa-phone-circle"></i> <a href="tel:@settings.Phone1">@settings.Phone1</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Header Upper -->
            <div class="header-upper">
                <div class="auto-container">
                    <!-- Main Box -->
                    <div class="main-box clearfix" style="display: flex; justify-content: center;">
                        <!--Logo-->
                        <div class="logo-box" style="flex: 1;">
                            <div class="logo"><a asp-action="Index" asp-controller="Home" title="Home"><img src="~/assets/images/logo.svg" alt="" title="Home"></a></div>
                        </div>

                        <div class="nav-box clearfix" style="flex: 2; text-align: center; margin-left: -6rem;">
                            <!--Nav Outer-->
                            <div class="nav-outer" style="text-align: center;">
                                <nav class="main-menu">
                                    <ul class="navigation clearfix">
                                        <li class="@(ViewBag.ActivePage == "Home" ? "current" : "") dropdown">
                                            <a asp-action="Index" asp-controller="Home">Home</a>
                                        </li>
                                        <li class="@(ViewBag.ActivePage == "About" ? "current" : "") dropdown">
                                            <a asp-action="Index" asp-controller="About">About Us</a>
                                        </li>
                                        <li class="@(ViewBag.ActivePage == "Destination" ? "current" : "")">
                                            <a asp-action="Index" asp-controller="Destination">Destinations</a>
                                        </li>
                                        <li class="@(ViewBag.ActivePage == "Trekking" ? "current" : "")">
                                            <a asp-action="Index" asp-controller="Trekking">Trekking</a>
                                        </li>
                                        <li class="@(ViewBag.ActivePage == "News" ? "current" : "") dropdown">
                                            <a asp-action="Index" asp-controller="News">News</a>
                                        </li>
                                        <li class="@(ViewBag.ActivePage == "Contact" ? "current" : "")">
                                            <a asp-action="Create" asp-controller="ContactUs">Contact</a>
                                        </li>
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <li class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "current" : "")">
                                                <a asp-action="Index" asp-controller="Dashboard" asp-area="Admin">Admin</a>
                                            </li>
                                        }
                                    </ul>
                                </nav>
                                <!-- Main Menu End-->
                            </div>
                            <!--Nav Outer End-->
                            <!-- Hidden Nav Toggler -->
                            <div class="nav-toggler">
                                <button class="hidden-bar-opener"><span class="icon"><img src="~/assets/images/icons/menu-icon.svg" alt=""></span></button>
                            </div>
                        </div>
                    </div>
                    <!-- End Header Upper -->
                </div>
            </div>
        </header>
