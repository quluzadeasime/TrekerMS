@using TREKER.Core.Entities
@using TREKER.MVC.Areas.Admin.Functions
 
@model IQueryable<TeamMember>

<!-- Banner Section -->
<section class="inner-banner">
    <div class="image-layer" style="background-image: url('@Url.Content("/assets/images/background/backphoto3.jpg")');"></div>
    <div class="auto-container">
        <div class="content-box">
            <h2>ABOUT US</h2>
            <div class="bread-crumb">
                <ul class="clearfix">
                    <li><span class="icon-home fa fa-home"></span><a asp-action="Index" asp-controller="Home">Home</a></li>
                    <li class="current">About Us</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<!--End Banner Section -->
<!--About Us Section-->
<section class="about-three">
    <div class="floated-icon right"><img src="~/assets/images/resource/hills-image.svg" alt="" title=""></div>
    <div class="auto-container">
        <div class="row clearfix">
            <!--Text Col-->
            <div class="text-col col-lg-6 col-md-12 col-sm-12">
                <div class="inner wow fadeInRight" data-wow-duration="1500ms" data-wow-delay="0ms">
                    <h2>World Best Travel Agency</h2>
                    <div class="text upper-text">Offering unparalleled global travel experiences, our agency strives to exceed expectations with curated itineraries, personalized service, and a commitment to excellence. Discover the world's wonders with confidence, guided by our expertise and passion for creating unforgettable journeys.</div>
                    <div class="f-blocks clearfix">
                        <div class="f-block">
                            <div class="inner-box">
                                <div class="icon"><img src="~/assets/images/resource/about-icon-1.svg" alt="" title=""></div>
                                <h6>Expert Team for Support</h6>
                            </div>
                        </div>
                        <div class="f-block">
                            <div class="inner-box">
                                <div class="icon"><img src="~/assets/images/resource/about-icon-2.svg" alt="" title=""></div>
                                <h6>Urgent Support for Client</h6>
                            </div>
                        </div>
                    </div>
                    <div class="quote-box">
                        <div class="quote">"With a focus on authenticity and personalized service, each journey with us promises to be transformative and unforgettable."</div>
                        <div class="quote-info clearfix">
                            <div class="image"><img src="~/assets/images/resource/founder.jpg" alt="" title=""></div>
                            <div class="info">
                                <span class="name">Selen Arsen</span>
                                <span class="designation">Founder of treker</span>
                            </div>
                            <div class="signature"><img src="~/assets/images/resource/signature-1.png" alt="" title=""></div>
                        </div>
                    </div>
                </div>
            </div>
            <!--Image Col-->
            <div class="image-col col-lg-6 col-md-12 col-sm-12">
                <div class="inner wow fadeInLeft" data-wow-duration="1500ms" data-wow-delay="0ms">
                    <div class="image-box">
                        <img src="~/assets/images/resource/about-image-3.svg" alt="" title="">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Facts Section -->
<section class="facts-section">
    <div class="image-layer" style="background-image: url('@Url.Content("/assets/images/background/backphoto5.jpg")');"></div>

    <div class="auto-container">
        <div class="content-box">
            <div class="video-btn"><a href="https://youtu.be/OPN9uYZywgM?si=NyqtwigzoTHp_Zli" class="theme-btn lightbox-image"><span class="icon"><img src="~/assets/images/icons/video-icon-2.svg" alt="" title=""></span></a></div>
            <div class="subtitle">Are you ready to travel?</div>
            <h2>Treker platform streamlines project management and enhances collaboration.</h2>
        </div>
    </div>
    <div class="facts-box">
        <div class="auto-container">
            <div class="inner-box">
                <div class="row clearfix">
                    <!--Block-->
                    <div class="fact-block col-xl-3 col-lg-3 col-md-6 col-sm-12">
                        <div class="inner">
                            <div class="count"><span>02+</span></div>
                            <div class="fact-title"><span>Years Exp</span></div>
                        </div>
                    </div>
                    <!--Block-->
                    <div class="fact-block col-xl-3 col-lg-3 col-md-6 col-sm-12">
                        <div class="inner">
                            <div class="count"><span>25+</span></div>
                            <div class="fact-title"><span>Top Hosts</span></div>
                        </div>
                    </div>
                    <!--Block-->
                    <div class="fact-block col-xl-3 col-lg-3 col-md-6 col-sm-12">
                        <div class="inner">
                            <div class="count"><span>30+</span></div>
                            <div class="fact-title"><span>Top Region</span></div>
                        </div>
                    </div>
                    <!--Block-->
                    <div class="fact-block col-xl-3 col-lg-3 col-md-6 col-sm-12">
                        <div class="inner">
                            <div class="count"><span>2k+</span></div>
                            <div class="fact-title"><span>Client Avilable</span></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--End Facts Section -->
<!--Why Section-->
<section class="why-section">
    <div class="floated-icon left"><img src="~/assets/images/resource/stones-left.svg" alt="" title=""></div>
    <div class="floated-icon right"><img src="~/assets/images/resource/stones-right.svg" alt="" title=""></div>
    <div class="auto-container">

        <div class="title-box centered">
            <h2><span>Why Choose Treker</span></h2>
        </div>

        <div class="row clearfix">
            <div class="left-col col-xl-3 col-lg-4 col-md-6 col-sm-12">
                <div class="inner">
                    <div class="why-block">
                        <div class="inner-box">
                            <div class="icon-box"><img src="~/assets/images/resource/icon-1.svg" alt=""></div>
                            <h4>Diverse Destinations</h4>
                            <div class="text"> Explore a variety of destinations.</div>
                        </div>
                    </div>
                    <div class="why-block">
                        <div class="inner-box">
                            <div class="icon-box"><img src="~/assets/images/resource/icon-2.svg" alt=""></div>
                            <h4>Value for Money</h4>
                            <div class="text">Get the most out of your money.</div>
                        </div>
                    </div>
                    <div class="why-block">
                        <div class="inner-box">
                            <div class="icon-box"><img src="~/assets/images/resource/icon-3.svg" alt=""></div>
                            <h4>Beautiful Places</h4>
                            <div class="text">Discover stunning and unique locations.</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="right-col col-xl-3 col-lg-4 col-md-6 col-sm-12">
                <div class="inner">
                    <div class="why-block">
                        <div class="inner-box">
                            <div class="icon-box"><img src="~/assets/images/resource/icon-4.svg" alt=""></div>
                            <h4>Fast Booking</h4>
                            <div class="text">Quick and easy reservation process.</div>
                        </div>
                    </div>
                    <div class="why-block">
                        <div class="inner-box">
                            <div class="icon-box"><img src="~/assets/images/resource/icon-5.svg" alt=""></div>
                            <h4>Support Team</h4>
                            <div class="text">Our support team is always here for you.</div>
                        </div>
                    </div>
                    <div class="why-block">
                        <div class="inner-box">
                            <div class="icon-box"><img src="~/assets/images/resource/icon-6.svg" alt=""></div>
                            <h4>Passionate Travel</h4>
                            <div class="text">Experience passionate travel adventures.</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="image-col col-xl-6 col-lg-4 col-md-12 col-sm-12">
                <div class="inner">
                    <div class="image-box"><img src="~/assets/images/resource/why-image-1.svg" alt=""></div>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section">
    <div class="image-layer" style="background-image: url('@Url.Content("/assets/images/background/backphoto6.jpg")');"></div>
    <div class="auto-container">
        <div class="upper-box">
            <div class="row clearfix">
                <!--Block-->
                <div class="feature-block col-lg-3 col-md-6 col-sm-12">
                    <div class="inner-box">
                        <div class="icon-box"><img src="~/assets/images/resource/f-icon-1.svg" alt=""></div>
                        <h5>Private Transport</h5>
                        <div class="text">Enjoy the convenience of private transportation for a seamless journey.</div>
                    </div>
                </div>
                <!--Block-->
                <div class="feature-block col-lg-3 col-md-6 col-sm-12">
                    <div class="inner-box">
                        <div class="icon-box"><img src="~/assets/images/resource/f-icon-2.svg" alt=""></div>
                        <h5>Diverse Destination</h5>
                        <div class="text">Explore a variety of stunning destinations with us.</div>
                    </div>
                </div>
                <!--Block-->
                <div class="feature-block col-lg-3 col-md-6 col-sm-12">
                    <div class="inner-box">
                        <div class="icon-box"><img src="~/assets/images/resource/f-icon-3.svg" alt=""></div>
                        <h5>Great Hotel</h5>
                        <div class="text">Stay in top-rated hotels for a comfortable and luxurious experience.</div>
                    </div>
                </div>
                <!--Block-->
                <div class="feature-block col-lg-3 col-md-6 col-sm-12">
                    <div class="inner-box">
                        <div class="icon-box"><img src="~/assets/images/resource/f-icon-4.svg" alt=""></div>
                        <h5>Fast Booking</h5>
                        <div class="text">Experience quick and easy booking with our user-friendly system.</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="carousel-box">
        <div class="auto-container">
            <div class="inner-box">
                <div class="reviews-carousel owl-theme owl-carousel">
                    <!--Block-->
                    <div class="slide-item">
                        <div class="inner">
                            <div class="left-image">
                                <div class="image"><img src="~/assets/images/icons/person1.jpg" alt=""></div>
                            </div>
                            <div class="rating"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></div>
                            <div class="text">"  The trails are well-marked and suitable for all levels of hikers. Plus, the cultural heritage of the region adds a fascinating layer to the experience.</div>
                            <div class="info">
                                <span class="name">John Smith</span>
                                <span class="designation">Travel Blogger</span>
                            </div>
                        </div>
                    </div>
                    <!--Block-->
                    <div class="slide-item">
                        <div class="inner">
                            <div class="left-image">
                                <div class="image"><img src="~/assets/images/icons/person2.jpg" alt=""></div>
                            </div>
                            <div class="rating"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i></div>
                            <div class="text">"  The combination of ancient ruins, lush forests, and panoramic views makes each hike a memorable adventure. The local hospitality adds to the charm, making Shamakhi a must-visit for any trekking enthusiast.</div>
                            <div class="info">
                                <span class="name">Maria Gonzalez</span>
                                <span class="designation">Outdoor Enthusiast</span>
                            </div>
                        </div>
                    </div>
                    <!--Block-->
                    <div class="slide-item">
                        <div class="inner">
                            <div class="left-image">
                                <div class="image"><img src="~/assets/images/icons/person3.jpg" alt=""></div>
                            </div>
                            <div class="rating"><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-star"></i><i class="fa fa-half-star"></i></div>
                            <div class="text">" The local food and warm welcome from the villagers make the trekking experience even more enjoyable. Shamakhi should be on every trekker's bucket list.</div>
                            <div class="info">
                                <span class="name">Alex Johnson</span>
                                <span class="designation">Adventure Guide</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


<!--Team Section-->
<section class="team-section">

    <div class="floated-icon left"><img src="~/assets/images/resource/team-icon-left.svg" alt="" title=""></div>
    <div class="floated-icon right"><img src="~/assets/images/resource/stones-right.svg" alt="" title=""></div>
    <div class="auto-container">
        <div class="title-box centered">
            <h2><span>Meet Our Tour Guide</span></h2>
        </div>
        <div class="carousel-box">
            <div class="team-carousel owl-theme owl-carousel">
                <!--Block-->
                @foreach(var item in Model)
                {
                    <div class="team-block-one">
                        <div class="inner-box">
                            <div class="image-box">
                                <div class="image"><a href="#"><img src="@item.ImageUrl" alt="" title=""></a></div>
                            </div>
                            <div class="lower-box">
                                <h4><a href="#">@item.FullName</a></h4>
                                <td class="text-center">@ViewFunctions.InsertSpacesBeforeUppercase(item.TeamMemberRoles.ToString())</td>

                            </div>
                        </div>
                    </div>
                }

              

            </div>
        </div>
    </div>
</section>